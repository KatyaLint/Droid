<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--kate-->

    <style name="NavigationTextStyle">
        <item name="android:textColor">@color/navigation_text_state</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:fontFamily">dinnextltpro_regular.otf</item>
    </style>


    <style name="StateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>


    <style name="GridTextStyle">
        <item name="android:textSize">@dimen/SP12</item>
        <!--<item name="android:paddingLeft">@dimen/DP4</item>-->
        <item name="android:maxLines">1</item>
    </style>

    <style name="register_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/hgb_edit_text_color</item>
        <item name="android:textColor">@color/hgb_edit_text_color</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="cc_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:textColorHint">@color/cc_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/cc_edit_text_border</item>
    </style>

    <style name="CustomButtonTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontName">dinnextltpro_light.otf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="RedCustomButtonStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/red_button</item>
    </style>

    <style name="GreenCustomButtonStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/green_button</item>
    </style>

    <style name="CNCStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="PaymentItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/marine</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:padding">10dp</item>


    </style>



    <style name="PaymentCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:button">@drawable/hgb_checkbox</item>
    </style>


    <style name="TravelerDetailsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:padding">@dimen/DP10</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="GridViewPassangersTextStyle">
        <item name="android:textSize">@dimen/SP12</item>
        <item name="android:fontFamily">dinnextltpro_regular.otf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">1</item>

    </style>

</resources>
