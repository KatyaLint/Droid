<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">

        <item name="color">@android:color/white</item>
    </style>


    <style name="NavigationTextStyle">
        <item name="android:textColor">@color/navigation_text_state</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:fontFamily">dinnextltpro_regular.otf</item>
    </style>


    <style name="StateText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#33000000</item>
    </style>


    <style name="GridTextStyle">
        <item name="android:textSize">@dimen/SP16</item>
        <!--<item name="android:paddingLeft">@dimen/DP4</item>-->
        <item name="android:layout_marginBottom">@dimen/DP6</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="register_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/SP20</item>
        <item name="android:textColorHint">@color/hgb_edit_text_color</item>
        <item name="android:textColor">@color/hgb_edit_text_color</item>
        <item name="android:background">@drawable/edit_text_border</item>
    </style>

    <style name="cc_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/SP16</item>
        <item name="android:paddingBottom">@dimen/DP10</item>
        <item name="android:textColorHint">@color/cc_edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/cc_edit_text_border</item>
    </style>

    <style name="CustomButtonTextStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontName">dinnextltpro_light.otf</item>
        <item name="android:textSize">@dimen/SP20</item>
        <item name="android:paddingBottom">@dimen/DP10</item>
        <item name="android:paddingTop">@dimen/DP10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="RedCustomButtonStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/red_button</item>
    </style>

  <!--  <style name="RedCustomButtonDisableStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/red_disable_button</item>
    </style>-->

<!--    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
    </style>

    <style name="MyRadioCheckButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_check_button</item>
    </style>-->

    <style name="RedCheckoutCustomButtonStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/DP16</item>
        <item name="android:textSize">@dimen/SP16</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/red_button_no_radius</item>
    </style>
    <style name="RedCheckoutCustomButtonDisableStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/DP16</item>
        <item name="android:textSize">@dimen/SP16</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/red_disable_button_no_radius</item>
    </style>

    <style name="GreenCustomButtonStyle" parent="CustomButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rounded_corner_opacity</item>
    </style>

    <style name="CNCStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/DP300</item>
        <item name="android:minWidth">@dimen/DP80</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:padding">@dimen/DP10</item>

    </style>

    <style name="TextViewTravlerCheckoutDetails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>



    </style>

    <style name="PaymentItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">@dimen/DP300</item>
        <item name="android:minWidth">@dimen/DP80</item>
        <item name="android:textColor">@color/marine</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:padding">@dimen/DP10</item>


    </style>


    <style name="PaymentCheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:button">@drawable/selector_hgb_checkbox</item>
    </style>






    <style name="PaymentSelectCCStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/SP10</item>
        <item name="android:text">Select Card</item>
        <item name="android:textColor">@color/hgb_blue</item>
        <item name="android:padding">@dimen/DP16</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/select_cc_border</item>
        <item name="android:drawableRight">@drawable/expand_more_a_1</item>
    </style>

    <style name="NewPaymentSelectCCStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/SP10</item>
        <item name="android:text">Select Card</item>
        <item name="android:textColor">@color/hgb_blue</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>


    </style>

    <style name="TravelerDetailsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/SP18</item>
        <item name="android:padding">@dimen/DP10</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="GridViewPassangersTextStyle">
    <item name="android:textSize">@dimen/SP16</item>
    <item name="android:fontFamily">dinnextltpro_regular.otf</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
    <item name="android:weightSum">1</item>

</style>

    <style name="PersonalInformationEditText">
        <item name="android:textSize">@dimen/SP16</item>
        <item name="android:textColor">@color/dark_teal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/DP8</item>
        <item name="android:layout_marginBottom">@dimen/DP8</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Sign_up_text_color">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/COLOR_73929E</item>
        <item name="android:textSize">@dimen/SP16</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="fontName">dinnextltpro_regular.otf</item>
        <item name="android:padding">@dimen/DP10</item>
    </style>

    <style name="TutAppTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="flight_details_view_title">
        <item name="android:textSize">@dimen/SP13</item>
        <item name="android:textColor">@color/filight_details_grey</item>
        <item name="fontName">dinnextltpro_medium.otf</item>
    </style>

    <style name="flight_details_view_text">
        <item name="android:textSize">@dimen/SP13</item>
        <item name="android:textColor">@color/COLOR_565656</item>
        <item name="fontName">dinnextltpro_regular.otf</item>
    </style>

</resources>
