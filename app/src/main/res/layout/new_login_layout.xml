<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/login"
        android:layout_marginTop="@dimen/DP80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Log In"
        android:textColor="@color/COLOR_00516f"
        android:textSize="@dimen/SP32"
        app:fontName="dinnextltpro_condensed.ttf" />



    <hellogbye.com.hellogbyeandroid.views.FontEditTextView

        android:id="@+id/username"
        style="@style/new_sign_up_text_color"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:hint="Email"
        android:layout_marginTop="@dimen/DP26"
        android:layout_marginRight="@dimen/DP26"
        android:layout_marginLeft="@dimen/DP26"
        android:textColor="@color/COLOR_00516f"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_width="match_parent" />

    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/login_password"
        android:layout_marginTop="@dimen/DP20"
        android:layout_marginRight="@dimen/DP26"
        android:layout_marginLeft="@dimen/DP26"
        style="@style/new_sign_up_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_marginRight="@dimen/DP26"
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/DP10"
        android:text="@string/forgot_password"
        android:textColor="@color/COLOR_00516f"
        app:fontName="dinnextltpro_light.otf" />


