<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pin_code"
    android:orientation="vertical">

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/login"
        android:layout_marginTop="@dimen/DP100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/COLOR_00516f"
        android:textSize="@dimen/SP32"
        app:fontName="dinnextltpro_mediumcond.ttf" />



    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/username"
        style="@style/new_sign_up_text_color"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Username"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:singleLine="true" />

    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/login_password"
        style="@style/new_sign_up_text_color"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:singleLine="true" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/DP10"
       >
        <CheckBox
            android:id="@+id/remmember_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DP16"
            android:button="@drawable/selector_hgb_checkbox"
            android:checked="true"
            />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_999999"
            android:text="@string/remmeber_me"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_alignTop="@+id/remmember_me_checkbox"
            android:layout_alignBottom="@+id/remmember_me_checkbox"
            android:layout_toRightOf="@+id/remmember_me_checkbox"
            />

    </RelativeLayout>


    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        android:id="@+id/login_button"
        android:layout_marginTop="@dimen/DP20"
        style="@style/RedButton"
        android:text="Log in" />


</LinearLayout>