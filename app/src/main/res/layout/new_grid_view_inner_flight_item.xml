<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_flight_square_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/innerWhiteFlightLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_WHITE"
        android:layout_gravity="center"
        android:padding="@dimen/DP10" >

        <!--android:background="@drawable/rounded_corner_white"-->

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/grid_flight_destination_from"
            style="@style/GridTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toronto to"
            android:textColor="@color/COLOR_00516f"
            app:fontName="dinnextltpro_regular.otf"
            />
        
        <ImageView
            android:id="@+id/flight_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/dlight_b_icon"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_flight_destination_from"
            android:id="@+id/grid_traveler_flight_price"
            style="@style/GridTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textColor="@color/COLOR_EE3A3C"
            app:fontName="dinnextltpro_medium.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_flight_destination_from"
            android:id="@+id/grid_traveler_continued_flight"
            style="@style/GridTextStyle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continued Flight"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_medium.otf" />

   <!--     <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/GridTextStyle"
            android:layout_marginLeft="@dimen/DP6"
            android:layout_below="@+id/grid_flight_destination_from"
            android:layout_toRightOf="@+id/grid_traveler_flight_price"
            android:textSize="@dimen/SP10"
            android:text="@string/itinerary_inner_flight_item"/>-->



        <LinearLayout
            android:id="@+id/flight_direction_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_traveler_flight_price"
            android:orientation="horizontal">

        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:id="@+id/grid_traveler_flight_stops_departure"
            style="@style/GridTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DP2"
            android:layout_marginTop="@dimen/DP4"
            android:text="YYZ"
            android:textColor="@color/COLOR_00516f"
            app:fontName="dinnextltpro_medium.otf" />


            <ImageView
                android:id="@+id/grid_flight_direction_view"
                android:layout_marginRight="@dimen/DP6"
                android:layout_marginLeft="@dimen/DP6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/grid_traveler_flight_stops_arrival"
                style="@style/GridTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/DP2"
                android:layout_marginTop="@dimen/DP4"
                android:text="CPT"
                android:textColor="@color/COLOR_00516f"
                app:fontName="dinnextltpro_medium.otf" />

            <ImageView
                android:id="@+id/grid_airplane_logo"
                android:layout_marginLeft="@dimen/DP10"
                android:layout_width="@dimen/DP20"
                android:layout_height="@dimen/DP20" />

        </LinearLayout>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/flight_direction_ll"
            android:id="@+id/grid_flight_airlines_class"
            style="@style/GridTextStyle"
            android:textSize="@dimen/SP12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="American Airline, Business Class"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_flight_airlines_class"
            android:id="@+id/grid_flight_operator_departure"
            style="@style/GridTextStyle"
            android:textSize="@dimen/SP12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Departure : 17:35"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />



        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_flight_operator_departure"
            android:id="@+id/grid_flight_operator_arrival"
            android:visibility="gone"
            style="@style/GridTextStyle"
            android:textSize="@dimen/SP12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Arrival: 20:41"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_flight_operator_arrival"
            android:id="@+id/grid_flight_time"
            style="@style/GridTextStyle"
            android:textSize="@dimen/SP12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="14:32"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />
    </RelativeLayout>


    <RelativeLayout
            android:padding="@dimen/DP6"
            android:background="@color/COLOR_f9fbfd"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/SP10"
                app:fontName="dinnextltpro_regular.otf"
                android:textColor="@color/COLOR_00516f"
                android:text="@string/flight_grid_more_options"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/grid_more_option"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>

