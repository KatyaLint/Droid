<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:paddingLeft="@dimen/DP26">

    <CheckBox
        android:id="@+id/payment_child_checkbox"
        style="@style/PaymentCheckBoxStyle"
        android:visibility="gone"
        android:layout_alignParentLeft="true"
        />


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/payment_child_name"
        style="@style/PaymentItemStyle"
        android:textSize="@dimen/SP14"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/payment_child_price"
        android:layout_centerVertical="true"
        app:fontName="dinnextltpro_light.otf" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/payment_child_price"
        style="@style/PaymentItemStyle"
        android:textSize="@dimen/SP14"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/passenger_select_cc_ll"
        app:fontName="dinnextltpro_light.otf" />

    <include
        layout="@layout/cc_layout"
        android:layout_marginRight="@dimen/SP10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        />

</RelativeLayout>