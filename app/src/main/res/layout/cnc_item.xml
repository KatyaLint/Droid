<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_margin="@dimen/DP10" >



    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/cnc_input"
        style="@style/CNCStyle"
        android:layout_marginRight="@dimen/DP10"
        android:text="HGB"
        android:textSize="@dimen/SP16"
        android:gravity="left"
        app:fontName="dinnextltpro_regular.otf"
        android:textColor="@color/COLOR_WHITE"

        android:background="@drawable/cnc_backround"
        android:layout_alignParentRight="true"/>

    <hellogbye.com.hellogbyeandroid.views.RoundedImageView

        android:id="@+id/cnc_image_view_user"
        android:layout_width="@dimen/DP34"
        android:layout_height="@dimen/DP34" />

</LinearLayout>