        android:visibility="gone" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:drawablePadding="@dimen/DP4"
        android:id="@+id/passenger_select_cc"
        style="@style/NewPaymentSelectCCStyle"
        app:fontName="dinnextltpro_regular.otf"
        android:drawableRight="@drawable/expand_more_a_1"/>

