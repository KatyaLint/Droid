<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@drawable/b_g_android"
    android:orientation="vertical">

    <EditText
        android:id="@+id/email"
        style="@style/register_edit_text"
        android:layout_marginTop="100dp"
        android:inputType="textEmailAddress"
        android:text="ari.sprung@amginetech.com"

        android:hint="@string/email_address"
       />

    <EditText
        android:id="@+id/password"
        style="@style/register_edit_text"
        android:layout_below="@+id/email"
        android:inputType="textPassword"
        android:text="123456"
        android:layout_marginTop="15dp"
        android:hint="@string/password"
       />

    <CheckBox
        android:id="@+id/remmember_me_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:button="@drawable/hgb_checkbox"
        android:checked="true"
        android:layout_below="@+id/password"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fontName="dinnextltpro_light.otf"
        android:textColor="@color/hgb_edit_text_color"
        android:text="@string/remmeber_me"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/remmember_me_checkbox"
        android:layout_alignBottom="@+id/remmember_me_checkbox"
        android:layout_toRightOf="@+id/remmember_me_checkbox"
      />




    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/user_login"
        style="@style/RedCustomButtonStyle"
        android:layout_below="@+id/remmember_me_checkbox"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_button"
        android:text="@string/login" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/forgotpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login"
        app:fontName="dinnextltpro_light.otf"
        android:layout_marginTop="15dp"
        android:text="@string/forgot_password"
        android:textColor="@color/hgb_edit_text_color"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />

</RelativeLayout>



