<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:background="@color/COLOR_003D4C"
        android:gravity="center"
        android:paddingLeft="@dimen/DP10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP34"
        android:orientation="horizontal">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/my_trips_upcoming"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"
            android:textColor="@color/COLOR_WHITE"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_trips_upcoming"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/my_trips_favorites"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/COLOR_WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_trips_favorites"/>


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/my_trips_paid"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/COLOR_WHITE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_trips_history"/>


    </LinearLayout>


    <SearchView
        android:layout_width="match_parent"
        android:id="@+id/my_trip_search_view"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"/>


    <hellogbye.com.hellogbyeandroid.views.PinnedHeaderListView
        android:id="@+id/pinnedListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:paddingTop="@dimen/DP20"
        android:id="@+id/my_trips_empty_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/earth_icon"/>
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SP32"
            android:textColor="@color/COLOR_00516f"
            android:gravity="center"
            app:fontName="dinnextltpro_mediumcond.ttf"
            android:text="@string/trip_no_trips_title"
            android:padding="@dimen/DP20"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SP18"
            android:gravity="center"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_999999"
            android:text="@string/trip_no_trips_explanation" />

    </LinearLayout>


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_trips_swap_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/COLOR_00516f"
        android:src="@drawable/fab_plus"
        android:layout_margin="@dimen/DP10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    </RelativeLayout>


</LinearLayout>