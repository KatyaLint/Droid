<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_card"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    card_view:cardElevation="@dimen/DP4"
    card_view:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    android:background="@drawable/card_border"
    >

    <LinearLayout
        android:layout_width="@dimen/DP300"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_room_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/DP1">

            <ImageView
                android:id="@+id/room_image"

                android:layout_width="@dimen/DP300"
                android:layout_height="@dimen/DP150"
                android:scaleType="centerCrop"

                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DP60"
                android:layout_alignBottom="@+id/room_image"
                android:background="@drawable/trending_gradient_shape" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/room_image"
                android:layout_margin="@dimen/DP6"
                android:orientation="vertical">

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price per night"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DP10" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/DP20" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/DP6">

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/DP300"
                android:textSize="@dimen/SP16"
                android:maxLines="1"
                app:fontName="dinnextltpro_regular.otf"
                android:layout_alignParentLeft="true"
                android:textColor="@color/dark_teal" />

            <ImageView
                android:id="@+id/room_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/check_mark_copy"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>