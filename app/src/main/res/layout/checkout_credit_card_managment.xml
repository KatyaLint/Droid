<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_WHITE">



       <hellogbye.com.hellogbyeandroid.views.FontTextView

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add New Card"/>

       <hellogbye.com.hellogbyeandroid.views.FontButtonView
           android:id="@+id/checkout_add_credit_card"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Add"
           android:background="@android:color/transparent"
           />

    <ListView
        android:layout_below="@+id/checkout_add_credit_card"
        android:id="@+id/checkout_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>