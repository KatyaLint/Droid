<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/flight_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/flight_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/SP18"
        android:text="YYZ - AMS - CPT"
        android:layout_weight="2"
        app:fontName="dinnextltpro_medium.otf"/>


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/flight_cost"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1434.12"
        android:textSize="@dimen/SP18"
        app:fontName="dinnextltpro_medium.otf"/>
    </LinearLayout>


<Button
    android:layout_alignEnd="@+id/flight_price"
    android:layout_below="@+id/flight_price"
    android:background="@color/red_button_color"
    android:id="@+id/select_flight"
    android:text="@string/flight_select_flight"
    android:textColor="@color/white"
    android:layout_width="@dimen/DP104"
    android:layout_height="@dimen/DP26"
    android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flight_price"
        android:orientation="vertical">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/flight_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toronto, Pearson"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amsterdam, Schipol"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"/>
        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cape Town, Cape Town International"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_medium.otf"/>

        </LinearLayout>


</RelativeLayout>
