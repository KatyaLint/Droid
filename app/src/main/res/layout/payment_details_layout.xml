<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/total_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        >
        <CheckBox
            android:id="@+id/payment_total_checkbox"
            style="@style/PaymentCheckBoxStyle"
            android:checked="false"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/payment_total_checkbox"
            android:orientation="vertical">

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay for entire trip"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:fontName="dinnextltpro_light.otf" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="$1234"
                app:fontName="dinnextltpro_bold.otf" />


        </LinearLayout>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/total_select_cc"
            style="@style/PaymentSelectCCStyle"
            app:fontName="dinnextltpro_regular.otf" />




    </RelativeLayout>


    <ExpandableListView
        android:id="@+id/ex_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_ll"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hgb_blue">



        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/payment_submit"
            style="@style/RedCustomButtonStyle"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_below="@+id/remmember_me_checkbox"
            android:layout_alignParentRight="true"
            android:background="@drawable/red_button"
            android:text="Proceed" />


    </RelativeLayout>

</RelativeLayout>