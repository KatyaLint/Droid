<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/payment_group_root"
    android:paddingLeft="@dimen/DP10"
    android:paddingRight="@dimen/DP10"
    android:background="@color/COLOR_WHITE"
    android:clickable="true">

    <LinearLayout
        android:layout_toLeftOf="@+id/payment_missing_details_rl"
        android:id="@+id/payment_group_ll"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_margin="@dimen/DP10"
        android:layout_height="wrap_content"
        android:weightSum="1">


        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/payment_group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/open_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/payment_group_image"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/DP20"
            android:orientation="vertical"
            android:layout_weight="0.21">

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRUCE"
                android:textColor="@color/COLOR_565656"
                android:textSize="@dimen/SP20"
                app:fontName="dinnextltpro_medium.otf" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_group_price"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="$$$$"
                android:visibility="visible"
                android:layout_marginTop="@dimen/DP4"
                android:textColor="@color/COLOR_565656"
                android:textSize="@dimen/SP14"
                app:fontName="dinnextltpro_regular.otf"
                />

        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/payment_missing_details_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/payment_group_missing"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Missing Details"
            android:gravity="center"
            android:visibility="visible"
            android:textColor="@color/COLOR_EE3A3C"
            android:textSize="@dimen/SP12"
            app:fontName="dinnextltpro_medium.otf"
            android:drawablePadding="@dimen/DP4"
            android:layout_toRightOf="@+id/payment_group_edit"
            android:drawableRight="@drawable/missing_details" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/payment_group_edit"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/checkout_uderline_edit"
            android:textColor="@color/COLOR_EE3A3C"
            android:textSize="@dimen/SP14"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




    </LinearLayout>



    <!--<CheckBox-->
        <!--android:id="@+id/payment_group_checkbox"-->
        <!--style="@style/PaymentCheckBoxStyle"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--/>-->




</RelativeLayout>