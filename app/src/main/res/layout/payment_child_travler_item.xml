<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/DP10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/COLOR_WHITE"
    android:orientation="vertical">



    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/header_travel_data"
        style="@style/TextViewTravlerCheckoutDetails"
        android:layout_alignLeft="@+id/travel_data_ll"
        android:layout_marginBottom="@dimen/DP16"
        android:text="@string/payment_traveler_information" />

    <include
        android:id="@+id/travel_data_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP44"
        android:layout_marginTop="@dimen/DP38"
        layout="@layout/travler_items_layout"/>



    <View
        android:id="@+id/travler_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DP1"
        android:layout_below="@+id/travel_data_ll"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/DP54"
        android:layout_marginTop="@dimen/DP20"
        android:layout_marginLeft="@dimen/DP54"
        android:layout_centerVertical="true"
        android:background="@color/COLOR_999999" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_below="@+id/travler_line"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/DP16"
        app:fontName="dinnextltpro_regular.otf"
        style="@style/TextViewTravlerCheckoutDetails"
        android:textColor="@color/COLOR_565656"
        android:text="@string/payment_billing" />

</RelativeLayout>