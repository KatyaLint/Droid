<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/payment_group_root"
    android:padding="@dimen/DP10"
    android:background="@color/COLOR_WHITE"
    android:clickable="true"
    >



        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/payment_group_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/open_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/DP20"
            android:layout_toRightOf="@+id/payment_group_image"
            android:orientation="vertical">
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_group_name"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/COLOR_003D4C"
                android:textSize="@dimen/SP20"
                android:text="dd"
                app:fontName="dinnextltpro_medium.otf"
               />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/payment_group_price"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="$$$$"
                android:textColor="@color/COLOR_565656"
                android:textSize="@dimen/SP16"
                app:fontName="dinnextltpro_regular.otf" />

        </LinearLayout>







    <!--<CheckBox-->
        <!--android:id="@+id/payment_group_checkbox"-->
        <!--style="@style/PaymentCheckBoxStyle"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--/>-->


    <include
        layout="@layout/cc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        />





</RelativeLayout>