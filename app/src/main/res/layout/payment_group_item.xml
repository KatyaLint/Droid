<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/payment_group_root"
    android:paddingLeft="@dimen/DP10"
    android:clickable="true"
    >

    <CheckBox
        android:id="@+id/payment_group_checkbox"
        style="@style/PaymentCheckBoxStyle"
        android:layout_alignParentLeft="true"
        />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/payment_group_name"
        style="@style/PaymentItemStyle"
        app:fontName="dinnextltpro_light.otf"
        android:layout_toRightOf="@+id/payment_group_checkbox"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/payment_group_price"
        style="@style/PaymentItemStyle"
        app:fontName="dinnextltpro_light.otf"

        android:layout_alignParentRight="true"/>

</RelativeLayout>