<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/cnc_add_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/COLOR_00516f"
        android:textSize="@dimen/SP24"
        app:fontName="dinnextltpro_condensed.ttf"
        android:padding="@dimen/DP20"
        android:text="@string/cnc_add_dialog"/>



    <LinearLayout
        android:padding="@dimen/DP20"
        android:id="@+id/cnc_add_dialog_add_trip"
        android:layout_below="@+id/cnc_add_dialog_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_chat" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:textSize="@dimen/SP14"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/DP10"
            android:text="Add a new trip"/>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/DP20"
        android:id="@+id/cnc_add_dialog_add_companion"
        android:layout_below="@+id/cnc_add_dialog_add_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_companions" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:textSize="@dimen/SP14"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/DP10"
            android:text="Add a new companion"/>

    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/DP20"
        android:id="@+id/cnc_add_dialog_favorites"
        android:layout_below="@+id/cnc_add_dialog_add_companion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:visibility="visible"
            android:id="@+id/add_to_favorites_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_to_favorites" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/remove_to_favorites_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove_from_favorites" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cnc_add_dialog_favorites_text"
            android:textSize="@dimen/SP14"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_medium.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/DP10"
            android:text="@string/cnc_add_dialog_add_favorites"/>

    </LinearLayout>



</RelativeLayout>