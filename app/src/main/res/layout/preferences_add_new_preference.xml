<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="@dimen/DP20" android:paddingRight="@dimen/DP20" android:paddingBottom="@dimen/DP20" android:paddingTop="@dimen/DP14" android:layout_gravity="top">

    <TextView android:id="@+id/text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#FFF"
        android:gravity="top" android:textSize="@dimen/SP16" android:paddingBottom="@dimen/DP20"/>

    <EditText
        android:id="@+id/editTextDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preferences_hint_add_name"
        android:textColorHint="@color/COLOR_999999">
    </EditText>
</LinearLayout>