    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/travel_pref_but"
        style="@style/RedCustomButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DP34"
        android:layout_marginLeft="@dimen/DP54"
        android:layout_marginRight="@dimen/DP54"
        android:background="@drawable/red_button"
        android:text="@string/onBoarding_got_it_button" />


</RelativeLayout>
