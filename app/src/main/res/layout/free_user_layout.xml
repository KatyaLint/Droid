    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        android:id="@+id/free_user_sign_in_btn"
        android:text="Sign In"
        style="@style/RedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/free_user_title_text"
        android:layout_marginTop="@dimen/DP44" />


    <!--style="@style/RedButton"-->

    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        style="@style/BlueButton"
        android:id="@+id/free_user_create_new_account_btn"
