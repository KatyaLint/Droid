<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_pin_code" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/registered_illustration"
        android:layout_marginTop="@dimen/DP30"
        android:id="@+id/free_user_image_view"
        android:layout_centerHorizontal="true" />


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:gravity="center"
        app:fontName="dinnextltpro_mediumcond.ttf"
        android:textColor="@color/COLOR_003D4C"
        android:textSize="@dimen/SP32"
        android:layout_height="wrap_content"
        android:text="@string/free_user_options"
        android:layout_marginTop="@dimen/DP20"
        android:layout_below="@+id/free_user_image_view"
        android:id="@+id/free_user_title_text" />


    <!--android:layout_centerVertical="true"
