<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:background="@color/COLOR_00516f"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <hellogbye.com.hellogbyeandroid.views.RoundedImageView
            android:id="@+id/companion_details_image"
            android:gravity="center_horizontal"
            android:layout_width="@dimen/DP100"
            android:layout_height="@dimen/DP100" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/companion_details_name"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/DP4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_medium.otf"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP18"
            android:text="Sandra Prter" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/companion_details_city"
            android:layout_margin="@dimen/DP4"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP14"
            android:text="Torronto, Ontario,Canada" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/companion_added_date"
            android:layout_margin="@dimen/DP4"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP14"
            android:text="Added 11.12.2015" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:layout_margin="@dimen/DP2"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP14"
            android:visibility="gone"
            android:text="@string/account_relationship" />




        <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/DP10"-->
        <!--android:id="@+id/companion_add_relationship"-->
        <!--android:text="Partner"/>-->

    </LinearLayout>




    <LinearLayout

        android:background="@color/COLOR_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_margin="@dimen/DP10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_565656"
            android:textSize="@dimen/SP12"
            android:text="@string/component_relationship" />
    </LinearLayout>

    <include layout="@layout/bottom_separator" />


    <!--<LinearLayout-->

