    <!--android:layout_height="wrap_content"-->
    <!--android:text="Name" />-->

    <!--</LinearLayout>-->
    <!-- <include layout="@layout/bottom_separator" />-->


    <LinearLayout
        android:visibility="visible"
        android:background="@color/COLOR_WHITE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_margin="@dimen/DP10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/companion_add_relationship"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP12"
            android:text="@string/account_relationship" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/expand_more_a_1"/>
        </RelativeLayout>


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/DP10"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_999999"
            android:textSize="@dimen/SP12"
            android:text="@string/component_first" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/DP10"
            android:layout_height="wrap_content"
            android:id="@+id/companion_name_details"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP12"
            android:visibility="gone"
            android:text="Sandra" />
    </LinearLayout>

    <include android:visibility="gone" layout="@layout/bottom_separator" />
    <LinearLayout
        android:visibility="gone"
        android:background="@color/COLOR_WHITE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
