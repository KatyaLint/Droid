            android:layout_width="match_parent"
            android:layout_margin="@dimen/DP10"
            android:layout_height="wrap_content"
            android:id="@+id/companion_second_name"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP12"
            android:text="Sandra" />
    </LinearLayout>


    <include layout="@layout/bottom_separator" />
    <LinearLayout

        android:background="@color/COLOR_F5F5F5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/DP10"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_565656"
            android:textSize="@dimen/SP12"
            android:layout_height="wrap_content"
            android:text="@string/component_email" />
    </LinearLayout>

    <include layout="@layout/bottom_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/COLOR_WHITE"
        android:layout_height="wrap_content">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/DP10"

            android:layout_height="wrap_content"
            android:id="@+id/companion_email_address"
            app:fontName="dinnextltpro_regular.otf"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP12"
            android:text="Email" />
    </LinearLayout>
    <include layout="@layout/bottom_separator" />

</LinearLayout>
</RelativeLayout>