<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/new_grid_main_ll"
    android:orientation="vertical">


    <LinearLayout
        android:layout_weight="0.2"
        android:id="@+id/passangers_names_ll"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DP34"
        android:background="@color/hgb_blue"
        android:orientation="horizontal" />

    <ScrollView
        android:layout_weight="6"
        android:id="@+id/scroll_view_scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:fillViewport="false">


        <LinearLayout
            android:id="@+id/scroll_view_ll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" />

    </ScrollView>

    <Button
        android:id="@+id/grid_make_payment"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_button_color"
        android:textColor="@color/white"
        android:text="@string/itinerary_make_payment"/>

</LinearLayout>