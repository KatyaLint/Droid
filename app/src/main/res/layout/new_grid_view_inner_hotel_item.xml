<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_main_hotel_square_ll"
    android:layout_width="@dimen/DP180"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/DP10" >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/DP140"
        android:layout_height="@dimen/DP90"
        android:background="@drawable/rounded_corner"
        android:padding="@dimen/DP4"
        android:layout_marginTop="@dimen/DP6"
        android:layout_gravity="center"
        >
        <!--android:layout_width="@dimen/DP150"-->
        <!--android:layout_height="@dimen/DP150"-->

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/grid_hotel_name"
        style="@style/GridTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Table Bay Hotel"
        android:textColor="@color/dark_teal"
        app:fontName="dinnextltpro_medium.otf" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/grid_hotel_place"
        style="@style/GridTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cape Town"
        android:textColor="@color/dark_teal"
        app:fontName="dinnextltpro_medium.otf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/DP6">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/grid_hotel_price"
            style="@style/GridTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textColor="@color/red_pink"
            app:fontName="dinnextltpro_medium.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/grid_hotel_night"
            style="@style/GridTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/Night"
            android:textColor="@color/brown_blue"
            app:fontName="dinnextltpro_medium.otf" />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>



