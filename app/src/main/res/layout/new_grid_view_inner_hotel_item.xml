<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_main_hotel_square_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:id="@+id/innerWhiteHotelLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="center"
        android:padding="@dimen/DP6"
        android:layout_margin="@dimen/DP6"
        android:orientation="vertical" >

        <!--android:background="@drawable/rounded_corner_white"-->

        <!--android:layout_width="@dimen/DP150"-->
        <!--android:layout_height="@dimen/DP150"-->

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/grid_hotel_name"
        style="@style/GridTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Table Bay Hotel"
        android:textColor="@color/dark_teal"
        app:fontName="dinnextltpro_regular.otf" />


        <ImageView
            android:id="@+id/hotel_bad_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_2"
            android:layout_alignParentRight="true"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_below="@+id/grid_hotel_name"
        android:id="@+id/grid_hotel_place"
        style="@style/GridTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cape Town"
        android:textColor="@color/dark_teal"
        app:fontName="dinnextltpro_regular.otf" />

        <include
            android:layout_marginBottom="@dimen/DP6"
            android:layout_marginTop="@dimen/DP6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid_star_layout"
            android:layout_below="@+id/grid_hotel_place"
            layout="@layout/star_layout" />


    <LinearLayout
        android:layout_below="@+id/grid_star_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/grid_hotel_price_ll">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/grid_hotel_price"
            style="@style/GridTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100000"
            android:textColor="@color/red_pink"
            app:fontName="dinnextltpro_regular.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/grid_hotel_night"
            style="@style/GridTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="/Night"
            android:textColor="@color/COLOR_063345"
            app:fontName="dinnextltpro_regular.otf" />

    </LinearLayout>





        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_hotel_price_ll"
            android:id="@+id/grid_hotel_taxes"
            style="@style/GridTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_taxes"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/grid_hotel_taxes"
            android:id="@+id/grid_hotel_room_explanation"
            style="@style/GridTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 King bad"
            android:maxLines="3"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_light.otf" />

    </RelativeLayout>
</LinearLayout>



