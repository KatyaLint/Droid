<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pin_code" >



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/DP20"
        android:orientation="vertical"
        android:id="@+id/checkout_image_baloon_ll"
        android:layout_above="@+id/confirm_done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/checkout_complite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Summary"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP46"
            app:fontName="dinnextltpro_mediumcond.ttf"
            android:gravity="center"
            android:layout_marginBottom="@dimen/DP10" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkout_failed"
            android:orientation="vertical"
            android:visibility="gone">
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some items could not be booked"
                android:textColor="@color/COLOR_00516f"
                android:textSize="@dimen/SP24"
                app:fontName="dinnextltpro_condensed.ttf"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/DP10"
                android:id="@+id/check_out_failed_small_title" />


            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="An error occured processing the following item(s):"
                android:textColor="@color/COLOR_00516f"
                android:textSize="@dimen/SP16"
                app:fontName="dinnextltpro_regular.otf" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/checkout_succeded">


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order has been placed"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP24"
            app:fontName="dinnextltpro_condensed.ttf"
            android:layout_above="@+id/checkout_image_baloon_ll"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/DP20"
            android:id="@+id/check_out_small_title" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baloon" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DP10"
            android:text="Thank you!"
            android:visibility="gone"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP60"
            app:fontName="dinnextltpro_mediumcond.ttf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/DP4"
            android:text="Your order has been placed"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP24"
            app:fontName="dinnextltpro_condensed.ttf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:visibility="gone"
            android:id="@+id/confirm_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test@gmail.com"
            android:textColor="@color/COLOR_00516f"
            android:layout_marginTop="@dimen/DP30"
            android:textSize="@dimen/SP18"
            app:fontName="dinnextltpro_regular.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DP20"
            android:gravity="center"
            android:text="@string/continue_to_checkout_last_screen"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_regular.otf" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/SP20"
            android:gravity="center"
            app:fontName="dinnextltpro_medium.otf"
            android:textColor="@color/COLOR_00516f"
            android:layout_marginTop="@dimen/DP20"
            android:text="Your Trip has been booked"/>

        </LinearLayout>

    </LinearLayout>


    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        android:id="@+id/confirm_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/DP20"
        style="@style/RedButton"
        android:textAllCaps="false"
        android:text="@string/done" />


</RelativeLayout>