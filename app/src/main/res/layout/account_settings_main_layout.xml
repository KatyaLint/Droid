<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/account_image_view_ll"
            android:background="@color/hgb_toolbar_blue"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">


            <ImageView
                android:id="@+id/account_details_image"
                android:gravity="center_horizontal"
                android:layout_width="@dimen/DP100"
                android:layout_height="@dimen/DP100" />


            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/account_settings_details_name"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/DP10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontName="dinnextltpro_medium.otf"
                android:textColor="@color/white"
                android:textSize="@dimen/SP18"

                android:text="Sandra Prter" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/account_settings_details_city"
                android:layout_margin="@dimen/DP10"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontName="dinnextltpro_light.otf"
                android:textColor="@color/white"
                android:textSize="@dimen/SP14"

                android:text="Torronto, Ontario,Canada" />


        </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_settings_preferences_list"
        android:layout_width="match_parent"
        android:layout_above="@+id/account_logout_button"
        android:layout_below="@+id/account_image_view_ll"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/account_logout_button"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/DP20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/account_settings_logout"

            android:gravity="center_horizontal"
            android:layout_width="match_parent"
             android:layout_marginTop="@dimen/DP10"
            android:layout_height="wrap_content"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/red_button_color"
            android:textSize="@dimen/SP14"

            android:text="Log Out" />


    </LinearLayout>


</RelativeLayout>
