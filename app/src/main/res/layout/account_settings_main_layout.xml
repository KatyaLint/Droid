<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/DP20"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/account_image_view_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/COLOR_00516f"
        android:gravity="center_horizontal"
        android:orientation="vertical">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

        <hellogbye.com.hellogbyeandroid.views.RoundedImageView
            android:id="@+id/account_details_image"
            android:background="@drawable/profile_image"
            android:layout_width="@dimen/DP100"
            android:layout_height="@dimen/DP100"
            android:gravity="center_horizontal"  />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/camera_icon"
        android:id="@+id/imageView"

        android:layout_alignRight="@+id/account_details_image"
        android:layout_alignEnd="@+id/account_details_image" />

</RelativeLayout>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/account_settings_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DP10"
            android:gravity="center_horizontal"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP18"
            app:fontName="dinnextltpro_medium.otf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/account_settings_details_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DP10"
            android:gravity="center_horizontal"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP14"
            app:fontName="dinnextltpro_light.otf" />


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_settings_preferences_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_below="@+id/account_image_view_ll" />


<!--    <LinearLayout
        android:id="@+id/account_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/DP20">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/account_settings_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DP10"
            android:gravity="center_horizontal"
            android:text="@string/component_log_out"
            android:textColor="@color/COLOR_EE3A3C"
            android:textSize="@dimen/SP16"
            app:fontName="dinnextltpro_regular.otf" />

    </LinearLayout>-->


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DP20">

    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        android:visibility="gone"
        android:id="@+id/account_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/component_log_out"
        style="@style/RedButton"/>


    <hellogbye.com.hellogbyeandroid.views.FontButtonView

        android:id="@+id/account_signin_button"
        android:layout_above="@+id/account_create_acount_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/account_sign_in"
        style="@style/RedButton"/>


        <hellogbye.com.hellogbyeandroid.views.FontButtonView
            android:layout_marginTop="@dimen/DP10"
            android:id="@+id/account_create_acount_button"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/account_create_account"
            style="@style/BlueButton"/>

    </LinearLayout>


</RelativeLayout>
