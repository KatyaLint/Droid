<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:background="@color/COLOR_999999"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout

    android:background="@color/COLOR_999999"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stopover_icon"
        android:paddingBottom="@dimen/DP10"/>

    <LinearLayout
        android:id="@+id/stop_over_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_stop_over"
            android:textSize="@dimen/SP16"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_regular.otf"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_below="@+id/stop_over_layout"
            android:id="@+id/stop_over_time"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h 56m"
            android:textSize="@dimen/SP18"
            android:textColor="@color/COLOR_565656"
            app:fontName="dinnextltpro_bold.otf"/>


        </LinearLayout>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/stop_over_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amsterdam, Schipol Airport"
        android:textSize="@dimen/SP16"
        android:textColor="@color/COLOR_565656"
        app:fontName="dinnextltpro_regular.otf"/>

</LinearLayout>

</RelativeLayout>
