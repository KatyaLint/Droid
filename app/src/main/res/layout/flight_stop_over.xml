<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/stop_over_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flight_stop_over"
            android:textSize="@dimen/SP18"
            app:fontName="dinnextltpro_medium.otf"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amsterdam, Schipol Airport"
            android:textSize="@dimen/SP18"
            app:fontName="dinnextltpro_medium.otf"/>
        </LinearLayout>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_below="@+id/stop_over_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 56m"
        android:textSize="@dimen/SP18"
        app:fontName="dinnextltpro_medium.otf"/>


</RelativeLayout>
