<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/DP20"
    android:id="@+id/my_trip_empty_view_ll"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/earth_icon"/>
    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/SP32"
        android:textColor="@color/COLOR_005077"
        android:gravity="center"
        app:fontName="dinnextltpro_mediumcond.ttf"
        android:text="@string/my_trip_empty_title"
        android:padding="@dimen/DP20"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/SP18"
        android:gravity="center"
        app:fontName="dinnextltpro_light.otf"
        android:textColor="@color/warm_grey"
        android:text="@string/my_trip_empty_text"
        />

</LinearLayout>
