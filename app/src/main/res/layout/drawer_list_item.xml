<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/nav_item_selected_image"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selected_item"
        android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/nav_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nav_item_selected_image"
        android:layout_marginLeft="@dimen/DP10"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/hgb_nav_font_unselected"
        app:fontName="dinnextltpro_regular.otf" />

</RelativeLayout>