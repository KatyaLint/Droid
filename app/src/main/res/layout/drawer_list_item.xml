<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/DP10"
    android:background="@color/COLOR_WHITE"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/nav_item_selected_image"
        android:layout_width="wrap_content"
        android:background="@drawable/selected_item"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/nav_item_view_image"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/DP4"
        android:layout_height="wrap_content" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/nav_item_text_main"
        android:layout_marginLeft="@dimen/DP10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/SP18"
        android:textColor="@color/COLOR_7FA5B4"
        app:fontName="dinnextltpro_regular.otf" />

</LinearLayout>