<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/canada_layout"
            style="@style/CountryButton"
            android:layout_width="@dimen/DP120"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="horizontal"
            android:paddingBottom="@dimen/DP10"
            android:paddingTop="@dimen/DP10">

            <ImageView
                android:id="@+id/canada_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/canada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="CANADA"
                app:fontName="dinnextltpro_regular.otf" />

        </LinearLayout>


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_marginRight="@dimen/DP10"
            android:text="OR"
            android:textColor="@color/COLOR_003D4C"
            app:fontName="dinnextltpro_medium.otf" />


        <LinearLayout
            android:id="@+id/us_layout"
            style="@style/CountryButton"
            android:layout_width="@dimen/DP120"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/DP10"
            android:paddingTop="@dimen/DP10">

            <ImageView
                android:id="@+id/us_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:src="@drawable/check"
                android:visibility="gone" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/usa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USA"
                app:fontName="dinnextltpro_regular.otf" />

        </LinearLayout>

    </LinearLayout>


    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/state_province"
        style="@style/adress_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP20"
        android:drawableRight="@drawable/dropdown_lightblue"
        android:focusableInTouchMode="false"
        android:hint="State/Province"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="visible" />

    <AutoCompleteTextView
        android:id="@+id/city"
        style="@style/adress_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP10"
        android:completionThreshold="1"
        android:hint="City"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="visible" />


    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/zip"
        style="@style/adress_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DP10"
        android:hint="Zip/Postal code"
        android:maxLines="1"
        android:singleLine="true"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/DP20"
        android:background="@color/COLOR_FEF4F4"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DP20"
            android:layout_marginLeft="@dimen/DP20"
            android:layout_marginRight="@dimen/DP20"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/promotion_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to receive special offers and promoting from HelloGbye by email"
                android:textSize="@dimen/SP16" />

            <CheckBox
                android:id="@+id/special_offer_checkbox"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/DP20"
                android:layout_height="wrap_content"
                android:text="I want to receive special  offers and promoting from select third parties"
                android:textSize="@dimen/SP16" />



            <hellogbye.com.hellogbyeandroid.views.FontButtonView
                android:id="@+id/create_user"
                style="@style/RedCheckoutCustomButtonStyle"
                android:text="GET STARTED"
                android:layout_marginTop="@dimen/DP50"
                android:layout_alignParentBottom="true"
                app:fontName="dinnextltpro_medium.otf" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>