<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_height="match_parent"
        android:orientation="vertical">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/summary_passenger_name"
            app:fontName="dinnextltpro_regular.otf"

            android:text="Ruffus"
            android:textColor="@color/hgb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/summary_passenger_total"
            app:fontName="dinnextltpro_regular.otf"

            android:text="1234"
            android:textColor="@color/hgb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/summary_passenger_cc"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:text="000"
        android:background="@drawable/select_cc_border"
        app:fontName="dinnextltpro_regular.otf"
        android:layout_alignParentRight="true"/>



</RelativeLayout>