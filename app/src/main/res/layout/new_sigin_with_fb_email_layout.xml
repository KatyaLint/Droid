<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <LinearLayout
            android:layout_margin="@dimen/DP10"
            android:id="@+id/sign_in_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DP10"
            android:orientation="vertical">

            <hellogbye.com.hellogbyeandroid.views.FontTextView

                android:id="@+id/sign_in_fb_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/COLOR_00516f"
                android:textSize="@dimen/SP32"
                app:fontName="dinnextltpro_condensed.ttf" />


            <com.facebook.login.widget.LoginButton
                android:layout_above="@+id/try_now_new_create"
                android:id="@+id/login_button_fb_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DP10"
                android:layout_marginBottom="@dimen/DP10"/>

            <hellogbye.com.hellogbyeandroid.views.FontTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"/>

            <hellogbye.com.hellogbyeandroid.views.FontEditTextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Enter Email"
                android:textSize="@dimen/SP14" />


            <hellogbye.com.hellogbyeandroid.views.FontEditTextView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:textSize="@dimen/SP14" />


            <hellogbye.com.hellogbyeandroid.views.FontCheckedTextView

                android:layout_centerInParent="true"
                android:id="@+id/login_remmember_me_checkbox"

                android:textSize="@dimen/SP16"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP38"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="@string/remmeber_me"
                app:fontName="dinnextltpro_medium.otf"
                android:textColor="@color/COLOR_00516f" />


        </LinearLayout>


</RelativeLayout>