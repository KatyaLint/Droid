<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_pin_code">

<hellogbye.com.hellogbyeandroid.views.FontTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/COLOR_00516f"
    android:gravity="center"
    android:textSize="@dimen/SP32"
    android:layout_margin="@dimen/DP10"
    app:fontName="dinnextltpro_mediumcond.ttf"
    android:text="Enter Pin"/>


<hellogbye.com.hellogbyeandroid.views.FontEditTextView
    android:id="@+id/pin_code_verification_pin"
    android:layout_width="match_parent"
    android:textColor="@color/COLOR_WHITE"
    android:textSize="@dimen/SP18"
    android:layout_margin="@dimen/DP10"
    android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        style="@style/RedButton"
        android:id="@+id/pin_code_verification_next"
        android:text="Next"/>

    <View
        android:id="@+id/bottom_separator"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/DP20"
        android:layout_height="@dimen/DP1"
        android:background="@color/COLOR_00516f" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:fontName="dinnextltpro_condensed.ttf"
        android:textSize="@dimen/SP24"
        android:textColor="@color/COLOR_00516f"
        android:text="@string/pin_code_title"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/resend_text"
        android:layout_margin="@dimen/DP20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/SP16"
        android:textColor="@color/COLOR_00516f"
        android:text="@string/pin_code_resend"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/SP16"
        android:visibility="gone"
        android:textColor="@color/COLOR_00516f"
        android:text="@string/pin_code_send_email"/>

</LinearLayout>