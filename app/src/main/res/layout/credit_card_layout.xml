<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight='@dimen/DP54'
    android:paddingLeft="@dimen/DP20"
    android:paddingRight="@dimen/DP20">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/master_card" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cc_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DP10"
            android:text="1234"
            android:textColor="@color/warm_grey_line"
            app:fontName="dinnextltpro_regular.otf" />

    </LinearLayout>


    <!--<ImageView-->
        <!--android:id="@+id/cc_image_next"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:background="@drawable/chevron_right_copy" />-->


    <include layout="@layout/layout_arrow"
        android:layout_alignParentRight="true"
        android:id="@+id/cc_image_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

</RelativeLayout>