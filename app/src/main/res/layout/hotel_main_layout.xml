<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP200" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/COLOR_WHITE"
                        android:paddingLeft="@dimen/DP10"
                        android:paddingRight="@dimen/DP10"
                        android:paddingTop="@dimen/DP10">


                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:maxWidth="@dimen/DP250"
                            android:textColor="@color/COLOR_003D4C"
                            android:textSize="@dimen/SP18"
                            app:fontName="dinnextltpro_medium.otf" />


                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/show_alternative_hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/red_button"
                            android:padding="@dimen/DP6"
                            android:text="@string/change_hotel"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="@dimen/SP13"
                            app:fontName="dinnextltpro_medium.otf" />

                        <include
                            android:id="@+id/star_rl"
                            layout="@layout/star_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hotel_name"
                            android:layout_marginTop="@dimen/DP10" />

                        <LinearLayout
                            android:id="@+id/hotel_price_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/star_rl"
                            android:layout_marginTop="@dimen/DP10"
                            android:orientation="horizontal">

                            <hellogbye.com.hellogbyeandroid.views.FontTextView
                                android:id="@+id/hotel_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/COLOR_EE3A3C"
                                android:textSize="@dimen/SP18"
                                app:fontName="dinnextltpro_medium.otf" />

                            <hellogbye.com.hellogbyeandroid.views.FontTextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" /Total (Taxes +fees)"
                                android:textColor="@color/COLOR_565656"
                                android:textSize="@dimen/SP14"
                                app:fontName="dinnextltpro_medium.otf" />

                        </LinearLayout>


                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/hotel_price_layout"
                            android:textColor="@color/COLOR_565656"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_light.otf" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:textColor="@color/COLOR_565656">


                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DP10"
                            android:layout_marginTop="@dimen/DP14"
                            android:text="Room Details"
                            android:textColor="@color/COLOR_565656"
                            android:textSize="@dimen/SP18"
                            app:fontName="dinnextltpro_medium.otf" />

                        <View
                            android:id="@+id/top_view"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/DP1"
                            android:layout_marginTop="@dimen/DP4"
                            android:background="@color/COLOR_565656" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/DP10"
                            android:layout_marginTop="@dimen/DP10"
                            android:paddingLeft="@dimen/DP10"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="@dimen/DP0"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/DP6"
                                android:layout_weight="200"

                                android:gravity="left"
                                android:orientation="vertical">

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ROOM OCCUPANTS"
                                    android:textColor="@color/COLOR_999999"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:id="@+id/room_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/COLOR_565656"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />
                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/DP0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/COLOR_565656"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="@dimen/DP0"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/DP6"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:orientation="vertical">

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHECK-IN"
                                    android:textColor="@color/COLOR_999999"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:id="@+id/checkin_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0-0-0"
                                    android:textColor="@color/COLOR_565656"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />
                            </LinearLayout>


                            <View
                                android:layout_width="@dimen/DP0"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/COLOR_565656"
                                android:gravity="center_vertical" />

                            <LinearLayout
                                android:layout_width="@dimen/DP0"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/DP6"
                                android:layout_weight="100"
                                android:gravity="center"
                                android:orientation="vertical">

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHECK-OUT"
                                    android:textColor="@color/COLOR_999999"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />

                                <hellogbye.com.hellogbyeandroid.views.FontTextView
                                    android:id="@+id/checkout_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/COLOR_565656"
                                    android:textSize="@dimen/SP14"
                                    app:fontName="dinnextltpro_medium.otf" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/DP1"
                            android:background="@color/COLOR_565656" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rooms_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/DP10"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/COLOR_WHITE"
                        android:orientation="vertical">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DP10"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="Hotel Details"
                            android:textColor="@color/COLOR_565656"
                            android:textSize="@dimen/SP18"
                            app:fontName="dinnextltpro_medium.otf" />

                        <android.support.v4.app.FragmentTabHost
                            android:id="@android:id/tabhost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TabWidget
                                    android:id="@android:id/tabs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom" />

                                <FrameLayout
                                    android:id="@android:id/tabcontent"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />
                            </LinearLayout>

                        </android.support.v4.app.FragmentTabHost>

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>