<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="The Boston Park Plaza Hotel"
                    android:textColor="@color/dark_teal"
                    android:textSize="18sp"
                    app:fontName="dinnextltpro_medium.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="$432.22"
                    android:textColor="@color/dark_teal"
                    android:textSize="32sp"
                    app:fontName="dinnextltpro_medium.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/hotel_price"
                    android:text="2 Nights"
                    android:textColor="@color/warm_grey"
                    android:textSize="17sp"
                    app:fontName="dinnextltpro_light.otf" />


                <LinearLayout
                    android:id="@+id/star_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_name"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fill_1_copy" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fill_1_copy" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fill_1_copy" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fill_1_copy" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fill_1_copy" />
                </LinearLayout>

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/star_rl"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="123 Street, Cape Town"
                    android:textColor="@color/warm_grey"
                    android:textSize="12sp"
                    app:fontName="dinnextltpro_light.otf" />

                <View
                    android:id="@+id/top_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/warm_grey_line" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/room_details_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="200"
                    android:orientation="vertical">

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/top_view"
                        android:layout_marginTop="10dp"
                        android:text="Room"
                        android:textColor="@color/marine"
                        android:textSize="12sp"
                        app:fontName="dinnextltpro_regular.otf" />

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/hotel_room"
                        android:layout_marginTop="10dp"
                        android:text="Deluxe, 1 King bed, Double bed with 2 washrooms"
                        android:textColor="@color/red_pink"
                        android:textSize="16sp"
                        app:fontName="dinnextltpro_regular.otf" />
                </LinearLayout>

                <View
                    android:id="@+id/footer_second_separator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/warm_grey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="120"

                    android:orientation="vertical">

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_guest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/top_view"
                        android:layout_marginTop="10dp"
                        android:text="Guest"
                        android:textColor="@color/marine"
                        android:textSize="12sp"
                        app:fontName="dinnextltpro_regular.otf" />

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_guest_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/hotel_room"
                        android:layout_marginTop="10dp"
                        android:text="1"
                        android:textColor="@color/red_pink"
                        android:textSize="16sp"
                        app:fontName="dinnextltpro_regular.otf" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/mid_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="@color/warm_grey_line" />

            <LinearLayout
                android:id="@+id/hotel_dates_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_dates_checkin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/top_view"
                        android:layout_marginTop="10dp"
                        android:text="CHECK IN"
                        android:textColor="@color/marine"
                        android:textSize="12sp"
                        app:fontName="dinnextltpro_regular.otf" />

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_dates_checkin_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/hotel_room"
                        android:layout_marginTop="10dp"
                        android:text="Tue, Apr 21, 2015"
                        android:textColor="@color/red_pink"
                        android:textSize="16sp"
                        app:fontName="dinnextltpro_regular.otf" />
                </LinearLayout>

                <View
                    android:id="@+id/footer_third_separator"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/warm_grey" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_dates_checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/top_view"
                        android:layout_marginTop="10dp"
                        android:text="CHECK OUT"
                        android:textColor="@color/marine"
                        android:textSize="12sp"
                        app:fontName="dinnextltpro_regular.otf" />

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_dates_checkout_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/hotel_room"
                        android:layout_marginTop="10dp"
                        android:text="Wed, Apr 22, 2015"
                        android:textColor="@color/red_pink"
                        android:textSize="16sp"
                        app:fontName="dinnextltpro_regular.otf" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/bottom_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/warm_grey_line" />
        </LinearLayout>

    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>