
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="@dimen/DP100"
    sothree:umanoScrollableView="@+id/detail_scroll_view">

    <FrameLayout
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/pull_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DP10"
            android:layout_marginRight="@dimen/DP10"
            android:padding="@dimen/DP10"
            android:layout_marginBottom="@dimen/DP10"
            android:background="@color/hgb_blue">

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Pull down to see more"
                android:textColor="@color/white"
                app:fontName="dinnextltpro_regular.otf" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/arrow_forward"/>


        </RelativeLayout>


        <ScrollView
            android:id="@+id/detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pull_down"

            android:gravity="center|top">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10">


                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/hotel_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:maxWidth="@dimen/DP250"
                        android:textColor="@color/dark_teal"
                        android:textSize="@dimen/SP18"
                        app:fontName="dinnextltpro_medium.otf" />


                    <LinearLayout
                        android:id="@+id/my_hotel_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"

                        android:layout_below="@+id/days"
                        android:layout_marginTop="@dimen/DP10"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_my_hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/check_on" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/text_my_hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/DP10"
                            android:text="My Hotel"
                            android:textColor="@color/warm_grey"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_light.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/text_select_hotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/DP6"
                            android:background="@drawable/red_button"
                            android:padding="@dimen/DP6"
                            android:text="Select Hotel"
                            android:textColor="@color/white"
                            android:textSize="@dimen/SP16"
                            android:visibility="gone"
                            app:fontName="dinnextltpro_light.otf" />





                    </LinearLayout>

                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/show_alternative_hotel"
                        android:layout_below="@+id/my_hotel_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_button"
                        android:padding="@dimen/DP6"
                        android:layout_marginTop="@dimen/DP10"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/SP13"
                        app:fontName="dinnextltpro_light.otf"
                        android:text="@string/show_alterate_hotels" />

                    <include
                        layout="@layout/star_layout"
                        android:id="@+id/star_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hotel_name"
                        android:layout_marginTop="@dimen/DP10"/>

                    <LinearLayout
                        android:id="@+id/hotel_price_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/star_rl"
                        android:layout_marginBottom="@dimen/DP10"
                        android:layout_marginTop="@dimen/DP10"
                        android:orientation="horizontal">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red_button_color"
                            android:textSize="@dimen/SP18"
                            app:fontName="dinnextltpro_medium.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/warm_grey"
                            android:text=" /Total (Taxes +fees)"
                            android:textSize="@dimen/SP14"
                            app:fontName="dinnextltpro_medium.otf" />

                    </LinearLayout>





                    <hellogbye.com.hellogbyeandroid.views.FontTextView
                        android:id="@+id/days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/hotel_price_layout"
                        android:textColor="@color/warm_grey"
                        android:textSize="@dimen/SP16"
                        app:fontName="dinnextltpro_light.otf" />


                </RelativeLayout>

                <View
                    android:id="@+id/top_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/DP10"
                    android:background="@color/warm_grey_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="120"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/DP10"
                        android:paddingRight="@dimen/DP10">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/top_view"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="Room"
                            android:textColor="@color/marine"
                            android:textSize="@dimen/SP12"
                            app:fontName="dinnextltpro_regular.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_room_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/hotel_room"
                            android:layout_marginTop="@dimen/DP10"
                            android:textColor="@color/red_pink"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_regular.otf" />
                    </LinearLayout>

                    <View
                        android:id="@+id/footer_second_separator"
                        android:layout_width="@dimen/DP0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DP20"
                        android:layout_marginRight="@dimen/DP20"
                        android:layout_marginTop="@dimen/DP10"
                        android:layout_weight="1"
                        android:background="@color/warm_grey" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="120"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/DP10"
                        android:paddingRight="@dimen/DP10">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_guest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/top_view"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="Guest"
                            android:textColor="@color/marine"
                            android:textSize="@dimen/SP10"
                            app:fontName="dinnextltpro_regular.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_guest_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/hotel_room"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="N/A"
                            android:textColor="@color/red_pink"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_regular.otf" />
                    </LinearLayout>




                </LinearLayout>





                <View
                    android:id="@+id/mid_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/DP10"
                    android:background="@color/warm_grey_line" />


                <LinearLayout
                    android:id="@+id/hotel_dates_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="120"
                        android:orientation="vertical">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_dates_checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/top_view"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="CHECK IN"
                            android:textColor="@color/marine"
                            android:textSize="@dimen/SP12"
                            app:fontName="dinnextltpro_regular.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_dates_checkin_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/hotel_room"
                            android:layout_marginTop="@dimen/DP10"
                            android:textColor="@color/red_pink"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_regular.otf" />
                    </LinearLayout>

                    <View
                        android:id="@+id/footer_third_separator"
                        android:layout_width="@dimen/DP0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/DP20"
                        android:layout_marginRight="@dimen/DP20"
                        android:layout_marginTop="@dimen/DP10"
                        android:layout_weight="1"
                        android:background="@color/warm_grey" />

                    <LinearLayout
                        android:layout_width="@dimen/DP0"
                        android:layout_height="match_parent"
                        android:layout_weight="120"
                        android:orientation="vertical">

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_dates_checkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/top_view"
                            android:layout_marginTop="@dimen/DP10"
                            android:text="CHECK OUT"
                            android:textColor="@color/marine"
                            android:textSize="@dimen/SP12"
                            app:fontName="dinnextltpro_regular.otf" />

                        <hellogbye.com.hellogbyeandroid.views.FontTextView
                            android:id="@+id/hotel_dates_checkout_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/hotel_room"
                            android:layout_marginTop="@dimen/DP10"
                            android:textColor="@color/red_pink"
                            android:textSize="@dimen/SP16"
                            app:fontName="dinnextltpro_regular.otf" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/bottom_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DP1"
                    android:layout_marginTop="@dimen/DP10"
                    android:background="@color/warm_grey_line" />




                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_full_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_room"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="ADDRESS"
                    android:textColor="@color/marine"
                    android:textSize="@dimen/SP12"
                    app:fontName="dinnextltpro_regular.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_full_address_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_room"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:textColor="@color/COLOR_555555"
                    android:textSize="@dimen/SP16"
                    app:fontName="dinnextltpro_light.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_room"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="CONTACT"
                    android:textColor="@color/marine"
                    android:textSize="@dimen/SP12"
                    app:fontName="dinnextltpro_regular.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_room"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:textColor="@color/COLOR_555555"
                    android:textSize="@dimen/SP16"
                    app:fontName="dinnextltpro_light.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_photo_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hotel_room"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="PHOTO GALLERY"
                    android:textColor="@color/marine"
                    android:textSize="@dimen/SP12"
                    app:fontName="dinnextltpro_regular.otf" />


                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/DP10"
                    android:fillViewport="true"
                    android:minWidth="@dimen/DP200"
                    android:scrollbars="none">

                    <TableLayout
                        android:id="@+id/tableLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:stretchColumns="1"/>
                </HorizontalScrollView>

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_amnities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="AMENITIES"
                    android:textColor="@color/marine"
                    android:textSize="@dimen/SP12"
                    app:fontName="dinnextltpro_light.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_amnities_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:textColor="@color/COLOR_555555"
                    android:textSize="@dimen/SP16"
                    app:fontName="dinnextltpro_light.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_nearby_attrictaions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:text="NEARBY ATTRACTIONS"
                    android:textColor="@color/marine"
                    android:textSize="@dimen/SP12"
                    app:fontName="dinnextltpro_light.otf" />

                <hellogbye.com.hellogbyeandroid.views.FontTextView
                    android:id="@+id/hotel_nearby_attrictaions_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DP10"
                    android:paddingLeft="@dimen/DP10"
                    android:paddingRight="@dimen/DP10"
                    android:textColor="@color/COLOR_555555"
                    android:textSize="@dimen/SP16"
                    app:fontName="dinnextltpro_light.otf" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/alt_hotel_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:background="@color/greyish_alternative_hotel"
        android:scrollbars="vertical" />
</RelativeLayout>