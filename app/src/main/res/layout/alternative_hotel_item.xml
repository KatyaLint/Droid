<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/DP160"

    android:layout_height="match_parent">

    <View
        android:id="@+id/top_selected_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP4"
        android:layout_alignParentTop="true"
        android:background="@color/COLOR_999999" />

    <LinearLayout
        android:id="@+id/alternate_hotel_item_left_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/DP10"
        android:orientation="vertical">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/alt_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/COLOR_00516f"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"
            android:text="hotel"
            app:fontName="dinnextltpro_medium.otf" />


        <include layout="@layout/star_layout" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/alt_hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP18"
            app:fontName="dinnextltpro_medium.otf" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/COLOR_999999"
            android:textSize="@dimen/SP12"
            android:text="Not incl. taxes and fees"
            app:fontName="dinnextltpro_regular.otf" />
    </LinearLayout>


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/COLOR_999999"
        android:textSize="@dimen/SP14"
        android:text="SELECT"
        android:clickable="true"

        android:layout_marginBottom="@dimen/DP10"
        android:layout_marginRight="@dimen/DP10"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:fontName="dinnextltpro_regular.otf" />



    <View
        android:layout_width="@dimen/DP1"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/COLOR_565656" />




</RelativeLayout>