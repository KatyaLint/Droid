<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/b_g_android">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:src="@drawable/b_g_android" >


    <include android:visibility="gone" android:id="@+id/pin_code_verification_layout" layout="@layout/pin_code_verification"/>


    <LinearLayout
        android:id="@+id/sign_up_layout_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/COLOR_WHITE"
        android:gravity="center"
        android:padding="@dimen/DP10"
        android:textSize="@dimen/SP16"
        android:text="@string/sign_up_account"/>


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/DP10"
        android:background="@color/COLOR_00516f"
        android:textColor="@color/COLOR_WHITE"
        android:textSize="@dimen/SP12"
        android:text="@string/sign_up_personal_details"/>


    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:padding="@dimen/DP10"
        android:id="@+id/sign_up_first_name"
        android:hint="@string/component_invite_hint_name"
        style="@style/Sign_up_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <hellogbye.com.hellogbyeandroid.views.FontEditTextView

        android:hint="@string/component_invite_hint_last_name"
        android:id="@+id/sign_up_last_name"
        style="@style/Sign_up_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        style="@style/Sign_up_text_color"
        android:id="@+id/sign_up_country"
        android:hint="@string/sign_up_city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/sign_up_city"
        style="@style/Sign_up_text_color"
        android:hint="@string/sign_up_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontTextView
        style="@style/Sign_up_text_color"
        android:id="@+id/sign_up_province_name"
        android:hint="@string/sign_up_province_name"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/DP10"
        android:background="@color/COLOR_00516f"
        android:textColor="@color/COLOR_WHITE"
        android:textSize="@dimen/SP12"
        android:text="@string/sign_up_contact_details"/>


    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/sign_up_email"
        style="@style/Sign_up_text_color"
        android:hint="@string/email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/sign_up_phone_number"
        style="@style/Sign_up_text_color"
        android:hint="@string/sign_up_phone_number"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/DP10"
        android:background="@color/COLOR_00516f"
        android:textColor="@color/COLOR_WHITE"
        android:textSize="@dimen/SP12"
        android:text="@string/sign_up_password"/>



    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        android:id="@+id/sign_up_password"
        style="@style/Sign_up_text_color"
        android:hint="@string/sign_up_password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontEditTextView
        style="@style/Sign_up_text_color"
        android:inputType="textPassword"
        android:id="@+id/sign_up_confirm_password"
        android:hint="@string/sign_up_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/sign_up_hyperlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/DP10"
        android:autoLink="all"
        android:linksClickable="true"
        android:textColor="@color/COLOR_WHITE"
        android:textSize="@dimen/SP14"
        android:text="@string/sign_up_term_of_use"/>



<Button
    android:id="@+id/sign_up_button"
    android:text="@string/sign_up_done"
    android:textColor="@color/COLOR_WHITE"
    android:background="@drawable/selector_red_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/DP20"/>

    </LinearLayout>

</LinearLayout>

</ScrollView>