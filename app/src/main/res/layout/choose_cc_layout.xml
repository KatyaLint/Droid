<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/select_cc_rl"
        android:orientation="vertical">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cc_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Itenerary and Payment"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontName="dinnextltpro_medium.otf" />


        <ListView
            android:id="@+id/select_cc_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Travler Information"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontName="dinnextltpro_medium.otf" />



        <android.support.v7.widget.RecyclerView
            android:id="@+id/summary_traveler_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/select_cc_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP82"
        android:layout_alignParentBottom="true"
        android:background="@color/hgb_blue">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cc_proceed"
            style="@style/RedCustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/red_button"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Proceed"
            app:fontName="dinnextltpro_medium.otf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontName="dinnextltpro_medium.otf" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/cc_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1234"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:fontName="dinnextltpro_mediumcond.ttf" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>