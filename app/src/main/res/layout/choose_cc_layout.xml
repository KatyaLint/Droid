<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/select_cc_header"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="@dimen/DP38"
        android:gravity="center_horizontal"
        android:background="@color/white">


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cc_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:fontName="dinnextltpro_medium.otf"
            android:drawableLeft="@drawable/expand"
            android:drawablePadding="10dp"
            android:textColor="@color/warm_grey_line"
            android:text="Add Credit/Debit Card" />




    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/select_cc_recyclerView"
        android:layout_width="match_parent"
        android:layout_above="@+id/select_cc_rl"
        android:layout_below="@+id/select_cc_header"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>





    <RelativeLayout
        android:id="@+id/select_cc_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP82"
        android:layout_alignParentBottom="true"
        android:background="@color/hgb_blue">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/cc_proceed"
            style="@style/RedCustomButtonStyle"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            app:fontName="dinnextltpro_medium.otf"
            android:background="@drawable/red_button"
            android:text="Proceed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontName="dinnextltpro_medium.otf"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="Total"/>
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/cc_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fontName="dinnextltpro_mediumcond.ttf"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="$1234"/>


        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>