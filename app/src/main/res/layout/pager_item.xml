<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_pager_item"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true" />



    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/onboarding_text_title"
        android:layout_width="match_parent"
        android:text="xvxc"
        android:textSize="@dimen/SP32"
        android:textColor="@color/COLOR_00516f"
        app:fontName="dinnextltpro_condensed.ttf"
        android:layout_marginBottom="@dimen/DP34"
        android:gravity="center"
        android:layout_above="@+id/onboarding_text_explanation"
        android:layout_height="wrap_content" />


    <hellogbye.com.hellogbyeandroid.views.FontButtonView
        android:id="@+id/onboarding_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/DP44"
        android:text="Next"
        android:textAllCaps="false"
        android:visibility="invisible"
        style="@style/RedButton"/>

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:id="@+id/onboarding_text_explanation"
        android:text="dfxcv"
        android:gravity="center"
        android:textSize="@dimen/SP14"
        app:fontName="dinnextltpro_light.otf"
        android:textColor="@color/COLOR_00516f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/onboarding_next_button"
        android:layout_marginBottom="@dimen/DP30" />

</RelativeLayout>