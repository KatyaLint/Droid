<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/DP10"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/settings_flight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/marine"
            android:textSize="@dimen/DP14"
            android:text="may be it's here"
            app:fontName="dinnextltpro_regular.otf"
            android:layout_centerInParent="true"/>

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/setting_flight_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/DP10"
            app:fontName="dinnextltpro_light.otf"
            android:textColor="@color/COLOR_555555"
            android:layout_centerInParent="true"
            android:lines="1"
            />

        </LinearLayout>

   <include  android:layout_width="wrap_content" android:layout_height="wrap_content"
       layout="@layout/layout_arrow"
        android:layout_alignParentRight="true"
       android:layout_centerInParent="true"/>

</RelativeLayout>
