    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hotel_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP250"
        android:scaleType="centerCrop"
        />

    <FrameLayout
