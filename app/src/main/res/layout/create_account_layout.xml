        <LinearLayout
            android:id="@+id/or_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_03"
            android:layout_marginTop="@dimen/DP30"
            android:layout_centerHorizontal="true"
            android:elevation="1dp"
            android:translationZ="2dp"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/DP80"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/DP1"

                android:background="@color/COLOR_00516f" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/or"
                android:layout_marginLeft="@dimen/DP8"
                android:layout_marginRight="@dimen/DP8"
                android:textColor="@color/COLOR_003D4C"
                android:textSize="@dimen/SP16"
                android:alpha="0.4"
                app:fontName="dinnextltpro_medium.otf" />

            <View
                android:layout_width="@dimen/DP80"
                android:layout_height="@dimen/DP1"

                android:layout_gravity="center_vertical"
                android:background="@color/COLOR_00516f" />
        </LinearLayout>

        <hellogbye.com.hellogbyeandroid.views.FontButtonView
            android:id="@+id/try_now_new_create"
            style="@style/BlueButton"
            android:layout_width="@dimen/DP340"
            android:layout_below="@+id/or_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP30"
            android:layout_marginBottom="@dimen/DP10"
            android:text="@string/try_it_now"
            app:fontName="dinnextltpro_medium.otf" />


        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:layout_above="@+id/try_now_new_create"-->
