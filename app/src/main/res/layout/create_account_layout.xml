        <ImageView
            android:id="@+id/logo_onboardong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_onboardong" />

        <ImageView
            android:id="@+id/airplane_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/building_01"
            android:src="@drawable/airplane_01"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/airplane_01_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_01"
            android:layout_marginLeft="@dimen/DP30"
            android:layout_marginTop="@dimen/DP80"
            android:src="@drawable/airplane_01" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP80"
            android:text="Welcome to"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP24"
            app:fontName="dinweb_condmedium.ttf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP10"
            android:text="LABEL_1"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP32"
            android:visibility="gone"
            app:fontName="dinweb_condmedium.ttf" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP8"
            android:gravity="center"
            android:text="LABEL_2"
            android:textColor="@color/COLOR_003D4C"
            android:textSize="@dimen/SP18"
            android:visibility="gone"
            app:fontName="dinweb_condmedium.ttf" />

        <hellogbye.com.hellogbyeandroid.views.FontEditTextView
            android:id="@+id/password1"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"

            android:layout_below="@+id/label_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP50"
            android:drawableRight="@drawable/pas_info_icon_on"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />

        <hellogbye.com.hellogbyeandroid.views.FontEditTextView
            android:id="@+id/password2"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP20"
            android:hint="Confirm Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/user_title"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/last_name"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/DP4"
            android:layout_marginTop="@dimen/DP24"
            android:drawableRight="@drawable/dropdown_lightblue"
            android:focusableInTouchMode="false"
            android:hint="Gender"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />

        <View
            android:id="@+id/title_underline_1"
            android:layout_width="@dimen/DP335"
            android:layout_height="@dimen/DP1"
            android:layout_below="@+id/user_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP4"
            android:background="@color/COLOR_999999"
            android:visibility="gone" />

        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/user_travel_type"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_underline_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP24"
            android:paddingLeft="@dimen/DP4"
            android:drawableRight="@drawable/dropdown_lightblue"
            android:focusableInTouchMode="false"
            android:hint="What type of traveller describes you?"
            android:maxLines="1"
            android:translationZ="@dimen/DP4"
            android:singleLine="true"
            android:visibility="gone" />

        <View
            android:id="@+id/title_underline_2"
            android:layout_width="@dimen/DP335"
            android:layout_height="@dimen/DP1"
            android:layout_below="@+id/user_travel_type"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP4"
            android:background="@color/COLOR_999999"
            android:visibility="gone" />

        <hellogbye.com.hellogbyeandroid.views.FontEditTextView
            android:id="@+id/first_name"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP24"
            android:hint="First Name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />

        <hellogbye.com.hellogbyeandroid.views.FontEditTextView
            android:id="@+id/last_name"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP20"
            android:hint="Last Name"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />

        <hellogbye.com.hellogbyeandroid.views.FontEditTextView
            android:id="@+id/email"
            style="@style/new_sign_up_text_color"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP50"
            android:hint="Email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/cloud_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cloud_03"
            android:layout_marginLeft="@dimen/MINUS_DP580"
            android:src="@drawable/cloud_04"

            />

        <ImageView
            android:id="@+id/cloud_4_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cloud_03"
            android:layout_marginRight="@dimen/MINUS_DP150"
            android:layout_marginTop="@dimen/DP10"
            android:src="@drawable/cloud_04"


            />

        <ImageView
            android:id="@+id/cloud_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/building_01"
            android:layout_marginRight="@dimen/MINUS_DP30"
            android:src="@drawable/cloud_07"


            />

        <ImageView
            android:id="@+id/cloud_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@id/building_02"
            android:layout_alignTop="@id/building_02"
            android:translationZ="1dp"
            android:alpha="0.60"
            android:layout_marginLeft="@dimen/MINUS_DP320"
            android:src="@drawable/cloud_08" />

        <ImageView
            android:id="@+id/cloud_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/building_01"
            android:layout_marginTop="@dimen/MINUS_DP320"
            android:layout_marginLeft="@dimen/MINUS_DP250"
            android:src="@drawable/cloud_05" />

        <ImageView
            android:id="@+id/cloud_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/building_01"
            android:layout_marginLeft="@dimen/MINUS_DP220"
            android:src="@drawable/cloud_06" />


        <hellogbye.com.hellogbyeandroid.views.FontButtonView
            android:id="@+id/create_account"
            style="@style/BlueButton"
            android:layout_width="@dimen/DP340"
            android:layout_below="@+id/try_now_new_create"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP10"
            android:text="@string/create_account"
            app:fontName="dinnextltpro_medium.otf" />

        <include
            android:id="@+id/birds"
            layout="@layout/bird_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/building_01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/DP80"
            android:visibility="gone" />


        <include
            android:id="@+id/login"
            layout="@layout/new_login_layout"
            android:layout_below="@+id/cloud_01"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP10"
            android:translationZ="@dimen/DP2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/building_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/cloud_03"
            android:layout_marginLeft="@dimen/MINUS_DP300"
            android:alpha="0.58"

            android:src="@drawable/building" />


    </RelativeLayout>
</LinearLayout>