<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP4"
            android:layout_marginTop="@dimen/DP24"
            android:progressDrawable="@drawable/progressbar"
            android:translationZ="@dimen/DP1" />

        <RelativeLayout
            android:id="@+id/create_account_disable_while_animating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:translationZ="@dimen/DP100" />



        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/DP20"
            android:layout_marginTop="@dimen/DP50"
            android:background="@drawable/arrow_back"
            android:visibility="gone" />

        <include
            android:id="@+id/country_layout"
            layout="@layout/country_selection_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/DP20"
            android:visibility="gone" />


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/DP20"
            android:layout_marginTop="@dimen/DP44"
            android:background="@drawable/create_user_next_selector"
            android:paddingBottom="@dimen/DP10"
            android:paddingLeft="@dimen/DP20"
            android:paddingRight="@dimen/DP20"
            android:paddingTop="@dimen/DP10"
            android:text="@string/next"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="@dimen/SP14"
            android:translationZ="@dimen/DP1"
            android:visibility="gone"
            app:fontName="dinnextltpro_medium.otf" />

        <ImageView
            android:id="@+id/cloud_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/MINUS_DP70"
            android:layout_marginTop="@dimen/DP20"
            android:src="@drawable/cloud_02" />


        <ImageView
            android:id="@+id/airplane_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cloud_01"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/cloud_01"
            android:layout_marginRight="@dimen/MINUS_DP200"
            android:src="@drawable/airplane_02" />

        <ImageView
            android:id="@+id/sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/MINUS_DP80"
            android:src="@drawable/sun"
            android:translationZ="-1dp" />

        <ImageView
            android:id="@+id/cloud_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cloud_01"
            android:layout_below="@+id/progressBar"
            android:layout_alignRight="@+id/welcome"
            android:layout_alignEnd="@+id/welcome"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" />

        <ImageView
            android:id="@+id/cloud_1_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/MINUS_DP240"
            android:layout_marginTop="@dimen/DP150"
            android:src="@drawable/cloud_01" />

        <ImageView
            android:id="@+id/cloud_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/MINUS_DP70"
            android:src="@drawable/cloud_03" />

        <ImageView
            android:id="@+id/building_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cloud_03"
            android:layout_marginRight="@dimen/MINUS_DP320"
            android:layout_marginTop="@dimen/MINUS_DP30"

            android:src="@drawable/building" />




        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/create_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/building_02"
            android:autoLink="all"
            android:gravity="center"
            android:linksClickable="true"
            android:text="@string/already_have_an_account_sign_in"
            android:textColor="@color/COLOR_00516f"
            android:textSize="@dimen/SP16"
            android:translationZ="@dimen/DP2"
            app:fontName="dinnextltpro_regular.otf" />
        <hellogbye.com.hellogbyeandroid.views.FontTextView

            android:visibility="gone"
            android:layout_above="@+id/create_login"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/SP20"
            android:layout_height="wrap_content"
            android:text="Choose server"
            android:id="@+id/change_server_url"/>


        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/amex_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECOMMADATIONS BY"
            android:textSize="@dimen/SP10"
            android:gravity="center_vertical"
            android:textColor="@color/COLOR_003D4C"
            android:drawableRight="@drawable/american_express_logo"/>



        <!--<hellogbye.com.hellogbyeandroid.views.FontTextView-->
            <!--android:id="@+id/sign_up_hyperlink"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:autoLink="all"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:linksClickable="true"-->
            <!--android:paddingBottom="@dimen/DP10"-->
            <!--android:paddingLeft="@dimen/DP10"-->
