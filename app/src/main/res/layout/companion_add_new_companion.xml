<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/companion_details_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPANION DETAILS"
                android:padding="@dimen/DP8"
                android:background="@color/COLOR_33d8d8d8" />


            <hellogbye.com.hellogbyeandroid.views.FontCheckedTextView
                android:id="@+id/companion_add_new_over_18"
                android:textSize="@dimen/SP16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"

                android:gravity="center_vertical"
                android:text="Traveller is over 18"
                app:fontName="dinnextltpro_medium.otf"
                android:textColor="@color/COLOR_00516f"

                android:layout_below="@+id/companion_details_txt"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <hellogbye.com.hellogbyeandroid.views.FontEditTextView
                android:layout_below="@+id/companion_add_new_over_18"

                android:id="@+id/companion_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:padding="@dimen/DP8" />

               <hellogbye.com.hellogbyeandroid.views.FontTextView
                   android:layout_below="@+id/companion_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFORMATION"
                android:padding="@dimen/DP8"
                   android:id="@+id/comapnion_personal_information_txt"
                android:background="@color/COLOR_33d8d8d8" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_below="@+id/comapnion_personal_information_txt"
                android:id="@+id/companion_gender_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:padding="@dimen/DP8" />


            <hellogbye.com.hellogbyeandroid.views.FontEditTextView
                android:layout_below="@+id/companion_gender_popup"

                android:id="@+id/companion_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:padding="@dimen/DP8" />

            <hellogbye.com.hellogbyeandroid.views.FontEditTextView
                android:layout_below="@+id/companion_first_name"
                android:id="@+id/companion_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:padding="@dimen/DP8" />
            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/comapnion_DOB_txt"
                android:layout_below="@+id/companion_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE OF BIRTH"
                android:padding="@dimen/DP8"
                android:background="@color/COLOR_33d8d8d8" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_below="@+id/comapnion_DOB_txt"
                android:id="@+id/companion_add_new_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Of Birth (Required)"
                android:padding="@dimen/DP8" />


            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:id="@+id/companion_relationship_txt"
                android:layout_below="@+id/companion_add_new_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RELATIONSHIP (How do you know this traveler?)"
                android:padding="@dimen/DP8"
                android:background="@color/COLOR_33d8d8d8" />

            <hellogbye.com.hellogbyeandroid.views.FontTextView
                android:layout_below="@+id/companion_relationship_txt"
                android:id="@+id/companion_add_new_relationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unspecified"
                android:padding="@dimen/DP8" />


            <hellogbye.com.hellogbyeandroid.views.FontTextView

                android:layout_alignParentBottom="true"
                android:id="@+id/companion_add_new_companion_btn"
                style="@style/RedCustomButtonStyle"
                android:layout_marginLeft="@dimen/DP54"
                android:layout_marginBottom="@dimen/DP20"
                android:layout_marginTop="@dimen/DP20"
                android:layout_marginRight="@dimen/DP54"
                android:layout_below="@+id/companion_add_new_relationship"
                android:text="Add New Companion" />

        </LinearLayout>


    </ScrollView>


</RelativeLayout>