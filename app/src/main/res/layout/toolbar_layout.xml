<?xml version="1.0" encoding="utf-8"?>

<hellogbye.com.hellogbyeandroid.views.CostumeToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/hgb_toolbar_blue">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_bar_logo"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/home_image" />

    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/titleBar"

        android:visibility="gone"/>

    <ImageButton
        android:layout_width="@dimen/DP24"
        android:layout_height="@dimen/DP24"
        android:id="@+id/keyboard"
        android:tag="keyboard"
        android:background="@drawable/keyboard_icon"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/DP14"
        android:visibility="gone"
        />

    <ImageButton
        android:layout_width="@dimen/DP24"
        android:layout_height="@dimen/DP24"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/DP14"
        android:background="@drawable/shopping_cart2"
        android:id="@+id/purchaseButton"
        android:visibility="gone"/>

    <ImageButton
        android:layout_width="@dimen/DP24"
        android:layout_height="@dimen/DP24"
        android:id="@+id/favority"
        android:background="@drawable/star2"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/DP34"
        android:visibility="gone"
        />




    <hellogbye.com.hellogbyeandroid.views.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPreference"
        android:layout_gravity="right"
        android:text="@string/tool_bar"
        android:layout_marginRight="@dimen/DP14"
        android:visibility="gone"
        />


</hellogbye.com.hellogbyeandroid.views.CostumeToolBar>
