<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <SearchView

        android:layout_width="match_parent"
        android:id="@+id/companion_search_view"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/DP10"
        android:id="@+id/companion_invite_ll">
        <hellogbye.com.hellogbyeandroid.views.FontTextView
            android:id="@+id/companion_invite_companion"
            android:text="@string/component_invite"
            android:textSize="@dimen/SP16"
            android:textColor="@color/red_button_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/companion_search_view"
        android:background="@color/white"
        android:id="@+id/companion_search_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/check_on"
        app:layout_anchor="@id/companion_search_view"
        app:layout_anchorGravity="bottom|right|end"

        app:rippleColor="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <!--<android.support.design.widget.FloatingActionButton-->
